{
  "name": "fontra",
  "version": "0.0.1",
  "description": "A browser-based font editor",
  "main": "src/fontra/client/main/main.js",
  "dependencies": {
    "chai": "^4.3.4",
    "electron-first-run": "^3.0.0",
    "electron-window-state": "^5.0.3",
    "find-free-port": "^2.0.0",
    "fs-extra": "^10.1.0",
    "mocha": "^9.1.3",
    "shell-env": "^4.0.1"
  },
  "scripts": {
    "start": "electron .",
    "test": "mocha test-js --reporter spec",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "fontra",
    "win": {
      "icon": "electron-icons/icon.png"
    },
    "mac": {
      "icon": "electron-icons/icon.png"
    },
    "extraResources": [
      {
        "from": "./src/extraResources/",
        "to": "extraResources",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "devDependencies": {
    "electron": "^20.2.0",
    "electron-builder": "^23.3.3"
  }
}
